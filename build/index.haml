!!!
%html{lang: "en"}
  %head
    %meta{content: 'width=device-width, initial-scale=1.0', name: 'viewport'}
    %meta{content: "text/html; charset=UTF-8", "http-equiv" => "Content-Type"}
    %meta{charset: "utf-8"}

    %title Vlad Mehakovic, Growth Marketer and Digital Strategist
    %link{href: "http://fonts.googleapis.com/css?family=Roboto:400,500,700,300,100", rel: "stylesheet", type: "text/css"}
    %link{href: "css/style.css", rel: "stylesheet"}

  %body.container
    %h1 Vlad Mehakovic, Growth Marketer and Digital Strategist

    .row.skills
      - skills.each do |skill|
        %div{class: 'col-xs-6 col-sm-4 col-lg-2'}
          .box
            .icon
              %i{class: "fa #{skill.fetch('icon')}"}
            .text
              %h3= skill.fetch('title')
              %p= skill.fetch('desc')

    %h3 Past clients
    .logos
      .row
        - logos[0..1].each do |logo|
          %div{ class: "col-xs-6 logo #{logo.fetch('src')}" }
            %img{ class: "#{logo.fetch('src').downcase}", src: "img/#{logo.fetch('src')}.png", alt: logo.fetch('alt') }
      .row
        - logos[4..6].each do |logo|
          .col-xs-4.logo
            %img{ class: "#{logo.fetch('src').downcase}", src: "img/#{logo.fetch('src')}.png", alt: logo.fetch('alt') }
      .row
        - logos[2..3].each do |logo|
          %div{ class: "col-xs-6 logo #{logo.fetch('src')}" }
            %img{ class: "#{logo.fetch('src').downcase}", src: "img/#{logo.fetch('src')}.png", alt: logo.fetch('alt') }


